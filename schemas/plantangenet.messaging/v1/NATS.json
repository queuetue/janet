{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NATSConnector Resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "type": "string", "enum": ["plantangenet.messaging/v1"] },
    "kind": { "type": "string", "enum": ["NATSConnector"] },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "spec": {
      "type": "object",
      "required": ["url", "cluster_id", "phase"],
      "properties": {
        "url": { "type": "string" },
        "cluster_id": { "type": "string" },
        "phase": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
