{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Identity Resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "type": "string", "enum": ["plantangenet.policy/v1"] },
    "kind": { "type": "string", "enum": ["Identity"] },
    "metadata": {
      "type": "object",
      "required": ["name", "phase"],
      "properties": {
        "name": { "type": "string" },
        "phase": { "type": "string" },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "spec": {
      "type": "object",
      "required": ["id", "displayName", "description", "roles"],
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "description": { "type": "string" },
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
