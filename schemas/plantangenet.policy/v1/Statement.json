{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Statement Resource",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "type": "string", "enum": ["plantangenet.policy/v1"] },
    "kind": { "type": "string", "enum": ["Statement"] },
    "metadata": {
      "type": "object",
      "required": ["phase"],
      "properties": {
        "phase": { "type": "string" },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "spec": {
      "type": "object",
      "required": ["action", "effect", "condition"],
      "properties": {
        "action": { "type": "string" },
        "effect": { "type": "string", "enum": ["allow", "deny"] },
        "condition": {
          "type": "array",
          "items": { "type": "array", "items": { "type": "string" } }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
